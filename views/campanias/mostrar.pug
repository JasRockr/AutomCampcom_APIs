extends ../layout/app

block contenido

  //- pre= JSON.stringify(campaign, undefined, 2)

  div(class='py-5')
    h1(class="text-4xl my-3 font-extrabold text-center")= pagina

    div 
      a(href="#" class="font-bold text-gray-600 text-5m") Categoria: 
          span(class="font-normal")= campaign.Categoria.nombre

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    form(method="POST") 
      div(class="space-y-8 mt-5 md:flex md:gap-4 md:items-start")

        div(class="md:w-2/3 bg-white shadow rounded-lg py-8 px-4 mx-auto max-w-4xl md:px-10")
          h3(class="text-center pb-5 leading-6 text-2xl font-bold text-gray-900") Envío de mensajes

          div(class="px-5 space-y-5")

            p.text-gray-600  Parámetros de configuración para enviar un mensaje

            div 
              label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="mensaje") Mensaje
              textarea#mensaje.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Mensaje que recibe el usuario final" spellcheck="true" name="mensaje")= datos.mensaje ? datos.mensaje : ''

            div 
              label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="url") Url
              input#url.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="https://" type="text" name="url" value= datos.url ? datos.url : '')

        div(class="md:w-1/3 bg-white shadow rounded-lg") 

          div(class="px-5 py-10 space-y-5")
            h2(class="text-2xl leading-6 font-bold text-gray-900") Regla de Negocio

            p= campaign.regla

            input(class="w-full py-2 bg-green-600 hover:bg-green-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Enviar SMS")  