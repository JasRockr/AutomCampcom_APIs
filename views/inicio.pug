extends ./layout/app

block contenido

  //- pre= JSON.stringify(campaign, undefined, 2)

  div(class='py-5')
    h1(class="text-4xl my-10 font-extrabold text-center") Campañas Activas

    div(class="flex flex-col md:flex-row items-center py-2 gap-4")
      h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Campañas:

      div(class="w-full md:w-auto flex items-center gap-2")
        label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias 
        select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
          option(value="") - Seleccione -
          each categoria in categorias
            option(value=categoria.id)= categoria.nombre

    section(class="py-5")
      h2(class="text-center text-2xl font-extrabold pt-10") Campañas de Bienvenida

      div(class="grid grid-cols-1 lg:grid-cols-2 gap-5 mt-5")
        each campania in bienvenidas
          include ./templates/card

    section(class="py-5")
      h2(class="text-center text-2xl font-extrabold pt-10") Campañas de Renovación

      div(class="grid grid-cols-1 lg:grid-cols-2 gap-5 mt-5")
        each campania in renovaciones
          include ./templates/card
      

